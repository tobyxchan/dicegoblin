<%- include('../partials/header') %>

<h2>Character Sheet</h2>

<br><table id="show-page">
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>Class</th>
      <th>Race</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= character.name %></td>
      <td><%= character.level %></td>
      <td><%= character.class %></td>
      <td><%= character.race %></td>
    </tr>
  </tbody>
</table>

<table class="table">
  <tr>
    <th>Strength</th>
    <th>Dexterity</th>
    <th>Constitution</th>
    <th>Intelligence</th>
    <th>Wisdom</th>
    <th>Charisma</th>
  </tr>
  <tr>
    <td><%= character.stats.strength %></td>
    <td><%= character.stats.dexterity %></td>
    <td><%= character.stats.constitution %></td>
    <td><%= character.stats.intelligence %></td>
    <td><%= character.stats.wisdom %></td>
    <td><%= character.stats.charisma %></td>
  </tr>
</table>

